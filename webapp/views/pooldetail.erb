<div class="row">
    <div class="span6">
        <h3><%= "#{@host.hostname}/pools/#{@pool.name}" %></h3>
    </div>
</div>
<div class="row">
    <div class="span6">
        <p><%= @host.hostdescription %></p>
        <p><strong>Last update:</strong> <%= @host.lastupdate.strftime format='%A, %B %d, %Y at %l:%M %P ' %></p>
    </div>
</div>

<hr />
<style type="text/css">
td {
    padding-right: 15px;
}
</style>
<div class="row">
    <div class="span8">
        <h4><a href="/<%= "#{@host.hostname}/pools/#{@pool.name}" %>"><%= @pool.name %></a></h4>
        <p><strong>Storage</strong></p>
        <table class="table-striped">
            <tr title="<%= get_desc :pool, 'free' %>"><td><strong>Free: </strong></td><td><%= @pool.free / 1000 ** 3 %> GB</td></tr>
            <tr title="<%= get_desc :pool, 'alloc' %>"><td><strong>Used: </strong></td><td><%= @pool.alloc / 1000 ** 3 %> GB</td></tr>
            <tr title="<%= get_desc :pool, 'size' %>"><td><strong>Capacity: </strong></td><td><%= @pool.size / 1000 ** 3 %> GB</td></tr>
            <tr title="<%= get_desc :pool, 'cap' %>"><td><strong>Percent Full: </strong></td><td><%= @pool.cap %> %</td></tr>
            <tr><td title="<%= get_desc :pool, 'health' %>"><strong>Health:</strong></td>
                <td title="<%= $ZPOOL_HEALTH[@pool.health.to_s] %>">
                    <% case @pool.health.to_s; when 'online' then %>
                        <span class="label label-success">
                    <% when 'degraded' then %>
                        <span class="label label-warning">
                    <% when 'faulted', 'removed', 'unavail' then %>
                        <span class="label label-important">
                    <% when 'offline' then %>
                        <span class="label label-inverse">
                    <% end %>
                    <%= @pool.health %>
                </span></td>
            </tr>
        </table>&nbsp;
        <p><strong>Properties</strong></p>
        <table class="table-striped">
            <tr title="<%= get_desc :pool, 'altroot' %>"><td><strong>Alt Root: </strong></td><td><%= @pool.altroot %></td></tr>
            <tr title="<%= get_desc :pool, 'expand' %>"><td><strong>Auto Expand: </strong></td>
                                                            <td><%= @pool.expand ? 'on' : 'off' %></td></tr>
            <tr title="<%= get_desc :pool, 'replace' %>"><td><strong>Auto Replace: </strong></td>
                                                            <td><%= @pool.replace ? 'on' : 'off' %></td></tr>
            <tr title="<%= get_desc :pool, 'bootfs' %>"><td><strong>Boot FS: </strong></td><td><%= @pool.bootfs %></td></tr>
            <tr title="<%= get_desc :pool, 'cachefile' %>"><td><strong>Cache File: </strong></td><td><%= @pool.cachefile %></td></tr>
            <tr title="<%= get_desc :pool, 'dedup' %>"><td><strong>Dedup Ratio: </strong></td><td><%= @pool.dedup %></td></tr>
            <tr title="<%= get_desc :pool, 'delegation' %>"><td><strong>Delegation: </strong></td>
                                                            <td><%= @pool.delegation ? 'on' : 'off' %></td></tr>
            <tr title="<%= get_desc :pool, 'dedupditto' %>"><td><strong>Ditto Copy Threshold: </strong></td>
                                                            <td><%= @pool.dedupditto %></td></tr>
            <tr title="<%= get_desc :pool, 'failmode' %>"><td><strong>Failure Mode: </strong></td><td><%= @pool.failmode %></td></tr>
            <tr title="<%= get_desc :pool, 'guid' %>"><td><strong>GUID: </strong></td><td><%= @pool.guid %></td></tr>
            <tr title="<%= get_desc :pool, 'listsnaps' %>"><td><strong>List Snapshots: </strong></td>
                                                            <td><%= @pool.listsnaps ? 'on' : 'off' %></td></tr>
            <tr title="<%= get_desc :pool, 'rdonly' %>"><td><strong>Read-only: </strong></td>
                                                            <td><%= @pool.rdonly ? 'yes' : 'no' %></td></tr>
            <tr title="<%= get_desc :pool, 'version' %>"><td><strong>Version: </strong></td><td><%= @pool.version %></td></tr>
        </table>
    </div>
</div>
            
            
            
            
            